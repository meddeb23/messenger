{
  "name": "messengerclone",
  "version": "1.0.0",
  "description": "Messenger clone with socket.io",
  "main": "server.js",
  "scripts": {
    "start": "node server/server.js",
    "client": "cd ./client && npm start",
    "server": "cd ./server && nodemon server.js",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "messengerclone"
  },
  "keywords": [
    "Messenger",
    "clone",
    "socket.io"
  ],
  "author": "Meddeb",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-fileupload": "^1.2.1",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.26",
    "morgan": "^1.10.0",
    "socket.io": "^2.4.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
